{
    "name": "from-zero-to-deployed-lambda",
    "version": "0.0.1",
    "description": "An example lambda function for the From Zero to Deployed series",
    "main": "index.js",
    "engines": {
        "npm": ">=9.8.1",
        "node": ">=v20.5.1"
    },
    "scripts": {
        "prepare": "husky",
        "build": "rimraf dist && tsc",
        "dev": "npm run build && node dist/index.js",
        "test": "jest --coverage",
        "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts' './*.js' './*.json' '!./package-lock.json'",
        "lint": "eslint . --ext .ts",
        "package": "repack-zip . ${npm_package_name}-${npm_package_version}.zip",
        "upload": "aws s3 cp ${npm_package_name}-${npm_package_version}.zip s3://from-zero-to-deployed/${npm_package_name}-${npm_package_version}.zip",
        "publish": "aws lambda update-function-code --function-name from-zero-to-deployed --s3-bucket from-zero-to-deployed --s3-key ${npm_package_name}-${npm_package_version}.zip",
        "package-upload-publish": "npm run build && npm run package && npm run upload && npm run publish",
        "execute": "aws lambda invoke --function-name from-zero-to-deployed --payload file://payload.json --cli-binary-format raw-in-base64-out response.json && more response.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pjgrenyer/from-zero-to-deployed-lambda.git"
    },
    "keywords": [
        "node",
        "typescript"
    ],
    "author": "Paul Grenyer",
    "license": "SEE LICENSE IN LICENSE",
    "bugs": {
        "url": "https://github.com/pjgrenyer/from-zero-to-deployed-lambda/issues"
    },
    "homepage": "https://github.com/pjgrenyer/from-zero-to-deployed-lambda#readme",
    "dependencies": {
        "typescript": "^5.9.2"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.3",
        "@babel/preset-typescript": "^7.27.1",
        "@babel/traverse": "^7.28.4",
        "@types/jest": "^30.0.0",
        "@types/supertest": "^6.0.3",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jest": "^30.1.3",
        "jest-mock-extended": "^4.0.0",
        "nock": "^14.0.10",
        "prettier": "^3.6.2",
        "repack-zip": "^0.2.8",
        "rimraf": "^6.0.1",
        "supertest": "^7.1.4",
        "ts-node": "^10.9.2",
        "typescript-eslint": "^8.43.0"
    },
    "repackZipConfig": {
        "excludes": [
            "*.zip",
            "*.mjs",
            "*.js",
            "*.ts",
            "*.mjs",
            "*.md",
            "test/**",
            "LICENSE",
            "src/**",
            "coverage/**",
            "package-lock.json",
            "tsconfig.json",
            "payload.json",
            "response.json"
        ]
    }
}
